<div class="container">
  <!-- Top content -->
  <div class="top-content" style="margin-top:80px;">
    <div class="inner-bg">
      <div class="container">
        <div class="row">
          <div class="col-sm-4"></div>
          <div class="col-sm-4">
            <%= image_tag 'logo-150x39.png' %>
          </div>
          <div class="col-sm-4"></div>
        </div>
        <div class="row">
          <div class="col-sm-4"></div>
          <div class="col-sm-4 form-box" style="margin-top:10px;">
            <% if flash[:notice] %>
              <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div> <!-- /container -->

<% if @verified %>
<script type="text/javascript">
setTimeout(function() {
  window.location = "<%= Rails.settings['itunes_url'] %>";
}, 25);
// If "custom-uri://" is registered the app will launch immediately and your
// timer won't fire. If it's not set, you'll get an ugly "Cannot Open Page"
// dialogue prior to the App Store application launching
window.location = "<%= app_url_scheme('/email_confirmation') %>";
</script>
<% end %>